pipeline {
    agent  {
        docker {
            image 'maven:3-alpine'
            args '-v /root/.m2:/root/.m2'
        }
    }
    stages {
        stage ('Compile Stage'){
            steps{
                    sh 'mvm clean'
                 }
        }
        stage ('Testing Stage'){
            steps{
                    sh 'mvm test'
                 }
        }
        stage ('package Stage'){
            steps{
                        sh 'mvm package'
                }
        }

    }
}
