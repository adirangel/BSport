
pipeline {
    agent {
        docker { image 'node:7-alpine'         
        }
    }
stage('Gradle Build') {
    if (isUnix()) {
        sh './gradlew clean build'
    } else {
        bat 'gradlew.bat clean build'
    }
}
        stage("test") {
            steps{
                echo "The test stage passed..."
            }
        }
    }
post{
        always{
            echo "post-build will always run after build completed"
            // Jenkins cleans the workspace
            cleanWs()  
        }
    }

