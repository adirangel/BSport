pipeline {
    agent any

    stages {
        stage ('Compile Stage'){
            steps{
                withMaven(maven : 'maven_3_5_0'){
                    sh 'mvm clean compile'
                        }
                }
        }
        stage ('Testing Stage'){
            steps{
                withMaven(maven : 'maven_3_5_0'){
                    sh 'mvm test'
                            }
                }
        }
        stage ('Deployment Stage'){
            steps{
                withMaven(maven : 'maven_3_5_0'){
                        sh 'mvm deploy'
                    }
                }
        }

    }
}
