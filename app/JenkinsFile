pipeline {
    agent any
        tools {
        gradle "GRADLE_LATEST"
    }
stages{
        stage("build") {
            steps{
                sh "chmod +x gradlew"
                echo "The build stage passed..."
            }
        }
        stage("test") {
            steps{
            sh './gradlew clean test --no-daemon' 
                echo "The test stage passed..."
            }
        }
    }
post{
        always{
            echo "post-build will always run after build completed"
            // Jenkins cleans the workspace
            cleanWs()  
        }
    }
}
