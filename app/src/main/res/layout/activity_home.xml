<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DF4A00F3"
    android:foregroundTint="#4A0D0D"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/Welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="@string/wel"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/FieldType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text=":אנא בחר את סוג המגרש הרצוי"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Welcome" />

    <ImageButton
        android:id="@+id/imageFootball"
        android:layout_width="162dp"
        android:layout_height="146dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="17dp"
        android:background="#DF4A00F3"
        app:layout_constraintEnd_toStartOf="@+id/imageBasketball"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FieldType"
        app:srcCompat="@drawable/football" />

    <ImageButton
        android:id="@+id/imageBasketball"
        android:layout_width="158dp"
        android:layout_height="146dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="27dp"
        android:background="#DF4A00F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageFootball"
        app:layout_constraintTop_toBottomOf="@+id/FieldType"
        app:srcCompat="@drawable/basketball" />

    <ImageButton
        android:id="@+id/imageFitness"
        android:layout_width="157dp"
        android:layout_height="149dp"
        android:layout_marginStart="141dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="114dp"
        android:background="#DF4A00F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageTennis"
        app:srcCompat="@drawable/fitness" />

    <ImageButton
        android:id="@+id/imageTennis"
        android:layout_width="160dp"
        android:layout_height="149dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="24dp"
        android:background="#DF4A00F3"
        app:layout_constraintBottom_toTopOf="@+id/imageFitness"
        app:layout_constraintEnd_toStartOf="@+id/imageJudo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageFootball"
        app:srcCompat="@drawable/tennis" />

    <ImageButton
        android:id="@+id/imageJudo"
        android:layout_width="158dp"
        android:layout_height="148dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="25dp"
        android:background="#DF4A00F3"
        app:layout_constraintBottom_toTopOf="@+id/imageFitness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageTennis"
        app:layout_constraintTop_toBottomOf="@+id/imageBasketball"
        app:srcCompat="@drawable/judo" />


</androidx.constraintlayout.widget.ConstraintLayout>