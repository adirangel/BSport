<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:foregroundTint="#4A0D0D"
    tools:context=".HomeActivity">

    <include
        android:id="@+id/main_page_toolbar"
        layout="@layout/app_bar_layout"
        >
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homepage1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/homepage"
                android:layout_marginTop="40dp"
                android:layout_marginLeft="70dp"
                />


            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:layout_marginTop="10dp"
                android:text="חפש שותפים לפעילות ספורט ברחבי העיר באר שבע"
                android:textSize="28dp"
                android:textStyle="bold"
                android:layout_below="@id/homepage1"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:text="@string/chooseDay"
                android:textSize="20dp"
                android:layout_below="@id/textView5"/>

            <ImageView

                android:id="@+id/homepage2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/homepage2"
                android:layout_below="@id/textView6"
                />

            <TextView

            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="30dp"
            android:text="עכשיו זה קל מתמיד למצוא מישהו לשחק איתו:"
            android:textSize="28dp"
            android:textStyle="bold"
            android:layout_below="@id/homepage2"/>


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:text="1. פרסם פעילות חדשה"
                android:textSize="20dp"
                android:layout_below="@id/textView7"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:text="2. חכה לחברים שיצטרפו אליך"
                android:textSize="20dp"
                android:layout_below="@id/textView9"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="30dp"
                android:text="3. תפגש עם החברים ותתחילו להתאמן! "
                android:textSize="20dp"
                android:layout_below="@id/textView10"/>


        </RelativeLayout>
    </ScrollView>


</RelativeLayout>

