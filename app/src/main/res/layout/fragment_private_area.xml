<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateAreaFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/WelcomeSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ברוך הבא לאזור האישי
"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/currentUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WelcomeSign"

        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/UserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/currentUserName"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:drawableStart="@drawable/email"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />
    <TextView
        android:id="@+id/UserFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserEmail"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:drawableStart="@drawable/name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"

        />
    <TextView
        android:id="@+id/UserAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserFullName"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:drawableStart="@drawable/age"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />
    <TextView
        android:id="@+id/User_about_myself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserAge"
        android:background="@drawable/inputs"
        android:padding="4dp"
        android:drawableStart="@drawable/about"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        />

    <Button
        android:id="@+id/ChangePass"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/User_about_myself"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:text="שינוי סיסמא"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ChangeDetails"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ChangePass"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:text="שינוי פרטים אישיים"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />


</RelativeLayout>