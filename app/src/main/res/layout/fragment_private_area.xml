<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrivateAreaFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/WelcomeSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ברוך הבא לאזור האישי"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/UserEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/WelcomeSign"
        android:padding="2dp"
        android:textSize="18sp"

        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_email_black_24dp"
        android:layout_marginTop="25dp"
        android:text="blablbal"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:id="@+id/UserFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserEmail"
        android:padding="2dp"
        android:text="blablbal"
        android:layout_marginLeft="25dp"

        android:textSize="18sp"
        android:drawablePadding="10dp"

        android:drawableStart="@drawable/ic_person_black_24dp"
        android:layout_marginTop="10dp"

        />
    <TextView
        android:id="@+id/UserAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserFullName"
        android:padding="2dp"
        android:textSize="18sp"
        android:text="blablbal"
        android:drawablePadding="10dp"

        android:drawableStart="@drawable/ic_cake_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        />
    <TextView
        android:id="@+id/User_about_myself"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/UserAge"
        android:padding="2dp"
        android:textSize="18sp"
        android:text="blablbal"
        android:drawablePadding="10dp"

        android:drawableStart="@drawable/ic_textsms_black_24dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        />

    <Button
        android:id="@+id/ChangePass"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:layout_below="@id/User_about_myself"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="25dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:text="שינוי סיסמא"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />

    <Button
        android:id="@+id/ChangeDetails"
        android:layout_width="189dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ChangePass"
        android:layout_marginLeft="202dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="17dp"
        android:background="@drawable/buttons"
        android:padding="4dp"
        android:text="שינוי פרטים אישיים"
        android:textAllCaps="false"
        android:textColor="@color/cardview_light_background"
        android:textSize="24sp" />


</RelativeLayout>