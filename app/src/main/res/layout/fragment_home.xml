<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/linearlayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homepage1"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/homepage"
                android:layout_marginTop="40dp"
                android:layout_marginStart="70dp"
                />


            <TextView

                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:layout_marginTop="10dp"
                android:text="@string/affiliateActivities"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_below="@id/homepage1"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:text="@string/chooseDay"
                android:textSize="20sp"
                android:layout_below="@id/textView5"
                tools:ignore="RtlSymmetry" />

            <ImageView

                android:id="@+id/homepage2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/homepage2"
                android:layout_below="@id/textView6"
                />

            <TextView

                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:text="@string/someonePlayWith"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_below="@id/homepage2"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:text="@string/postNewActivity"
                android:textSize="20sp"
                android:layout_below="@id/textView7"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:text="@string/toJoinYou"
                android:textSize="20sp"
                android:layout_below="@id/textView9"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="30dp"
                android:text="@string/startPracticing"
                android:textSize="20sp"
                android:layout_below="@id/textView10"
                tools:ignore="RtlSymmetry" />


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>