<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Activity">

    <EditText
        android:id="@+id/activity_type"
        android:layout_width="238dp"
        android:layout_height="49dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter your activity:.."
        android:padding="15dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/game_type"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/game_type"
        android:layout_width="234dp"
        android:layout_height="53dp"
        android:layout_below="@+id/activity_type"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="91dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter game type.."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/number_of_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_type"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/number_of_players"
        android:layout_width="234dp"
        android:layout_height="53dp"
        android:layout_below="@+id/game_type"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="91dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter number of player.."
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/game_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_type"
        tools:ignore="MissingConstraints" />
    <EditText
        android:id="@+id/game_date"
        android:layout_width="234dp"
        android:layout_height="53dp"
        android:layout_below="@+id/game_type"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="86dp"
        android:layout_marginTop="8dp"

        android:layout_marginEnd="91dp"
        android:layout_marginBottom="8dp"
        android:hint="Enter game date"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/number_of_players"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_type"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/submit_activity"
        android:layout_width="155dp"

        android:layout_height="50dp"
        android:layout_below="@+id/number_of_players"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="111dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/buttons"
        android:text="Submit"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/game_date"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>