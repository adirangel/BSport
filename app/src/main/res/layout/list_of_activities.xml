<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_id"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="170dp"
    android:layout_height="190dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    android:focusable="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_type"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:background="@drawable/fui_ic_anonymous_white_24dp"/>


        <ImageButton
            android:id="@+id/deleteButton"
            android:clickable="true"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="95dp"
            android:layout_marginStart="145dp"
            android:src="@drawable/ic_remove_circle_gray_24dp"
            android:focusable="true" />

        <TextView
            android:id="@+id/name_activity"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="@string/name_activity"
            android:textColor="#2d2d2d"
            android:gravity="center"
            android:layout_below="@id/image_type"
            android:singleLine="true"
            android:textSize="18sp" />



        <TextView
            android:id="@+id/game_date1"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="@string/game_date1"
            android:textColor="#2d2d2d"
            android:layout_below="@id/name_activity"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="23dp"
            android:text="@string/locationActiv"
            android:textColor="#2d2d2d"
            android:layout_below="@id/game_date1"
            android:gravity="center"
            android:singleLine="true"
            android:textSize="12sp" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>
