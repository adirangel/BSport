<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@color/colorAccent"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="320dp"
            android:layout_height="110dp"
            card_view:cardCornerRadius="20dp"
            card_view:cardBackgroundColor="@color/design_default_color_secondary_variant"
            >
        <!--
        items for a single row of RecyclerView
        -->
            <TextView
                android:id="@+id/type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Type"
                android:singleLine="true"
                android:textColor="#FFFFFF"
                android:layout_marginRight="15dp"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/name"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                />

            <TextView
                android:id="@+id/neighborhood"
                android:singleLine="true"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="neighborhood"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:layout_marginRight="15dp"

                android:layout_marginTop="50dp"
                />

            <TextView
                android:id="@+id/street"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="street"
                android:textColor="#FFFFFF"
                android:layout_marginRight="15dp"
                android:layout_marginTop="70dp"
                android:textSize="15sp" />

            <ImageButton
                android:id="@+id/create_activity_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="280dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/create_activity"
                android:singleLine="true"
                android:background="@color/design_default_color_secondary_variant"

                />


        </androidx.cardview.widget.CardView>


</LinearLayout>


